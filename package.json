{
  "name": "backend-monolith",
  "version": "0.0.1",
  "description": "Monolith backend application for the Issue Tracker Project.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Issue-Tracker-M/backend-monolith"
  },
  "license": "MIT",
  "scripts": {
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc --strict",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose",
    "dev": "npm run build-ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon --watch \"**/*.js\" dist/server.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w --strict"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.7",
    "passport": "^0.4.1",
    "passport-google": "^0.3.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "@types/bcrypt": "^3.0.0",
    "@types/bcrypt-nodejs": "^0.0.31",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.7",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^7.2.3",
    "@types/express": "^4.17.8",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^26.0.14",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/nodemon": "^1.19.0",
    "@types/passport": "^1.0.4",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "concurrently": "^5.3.0",
    "cypress": "^5.3.0",
    "eslint": "^7.10.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
